<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Project - <%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-8">Edit Project: <%= project.title %></h1>

    <form action="/solutions/editProject" method="POST" class="space-y-6">
      <input type="hidden" name="id" value="<%= project.id %>">

      <div>
        <label class="label"><span class="label-text font-bold">Title *</span></label>
        <input type="text" name="title" value="<%= project.title %>" required class="input input-bordered w-full">
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Feature Image URL *</span></label>
        <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required class="input input-bordered w-full">
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Sector *</span></label>
        <select name="sector_id" required class="select select-bordered w-full">
          <% sectors.forEach(s => { %>
            <option value="<%= s.id %>" <%= project.sector_id == s.id ? 'selected' : '' %>>
              <%= s.sector_name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Short Summary *</span></label>
        <textarea name="summary_short" required class="textarea textarea-bordered w-full h-32"><%= project.summary_short %></textarea>
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Short Intro *</span></label>
        <textarea name="intro_short" required class="textarea textarea-bordered w-full h-32"><%= project.intro_short %></textarea>
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Impact Description *</span></label>
        <textarea name="impact" required class="textarea textarea-bordered w-full h-48"><%= project.impact %></textarea>
      </div>

      <div>
        <label class="label"><span class="label-text font-bold">Original Source URL *</span></label>
        <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required class="input input-bordered w-full">
      </div>

      <div class="flex gap-4 mt-8">
        <button type="submit" class="btn btn-success btn-lg">Update Project</button>
        <a href="/solutions/projects" class="btn btn-ghost btn-lg">Cancel</a>
        <a href="/solutions/deleteProject/<%= project.id %>" 
           class="btn btn-error btn-lg ml-auto"
           onclick="return confirm('Are you sure you want to DELETE this project?')">Delete Project</a>
      </div>
    </form>
  </div>
</body>
</html>